             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Memory_App.ViewModels"
             x:Class="Memory_App.Views.ViewAll"
             xmlns:models="clr-namespace:Memory_App.Models"
             x:DataType="viewmodels:MemoryListViewModel"
             Title="All Memories">


    <ContentPage.BindingContext>
        <viewmodels:MemoryListViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
 
        <!--<CollectionView ItemsSource="{Binding Memories}">
